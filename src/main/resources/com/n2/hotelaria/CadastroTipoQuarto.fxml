<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="rootPane" maxHeight="400.0" maxWidth="600.0" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="Controllers.CadastroTipoQuartoController">
    <children>
        <GridPane hgap="10.0" vgap="10.0" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="400.0" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Nome do Tipo de Quarto:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="nomeTipoQuartoField" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Quantidade de Camas:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="quantidadeCamasField" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Valor da Diária (R$):" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="valorDiariaField" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Descrição:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextArea fx:id="descricaoArea" prefWidth="200.0" prefHeight="100.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </children>
        </GridPane>
        <Button fx:id="cadastrarButton" layoutX="200.0" layoutY="370.0" minWidth="100.0" onAction="#handleCadastroTipoQuarto" text="Cadastrar" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="200.0" />
        <Button fx:id="voltarButton" layoutX="350.0" layoutY="370.0" minWidth="100.0" onAction="#handleVoltar" text="Voltar" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="350.0" />
    </children>
</AnchorPane>
