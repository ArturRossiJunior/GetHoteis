<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootPane" maxHeight="1000.0" maxWidth="1000.0" minHeight="1000.0" minWidth="1000.0" prefHeight="1000.0" prefWidth="1000.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="Controllers.HomeController">
    <children>
        <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="150.0" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="200.0" AnchorPane.topAnchor="150.0">
            <children>
                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="cadastroQuartoButton" onAction="#openCadastroQuarto" text="Cadastrar um Quarto" />
                        <Button fx:id="modificarQuartoButton" onAction="#modificarQuartoSelecionado" text="Modificar Quarto" />
                        <Button fx:id="excluirQuartoButton" onAction="#excluirQuartoSelecionado" text="Excluir Quarto" />
                    </children>
                </HBox>
                <ListView fx:id="quartosListView" prefWidth="800.0" prefHeight="200.0" />
                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="cadastroTipoQuartoButton" onAction="#openCadastroTipoQuarto" text="Cadastrar Tipo de Quarto" />
                        <Button fx:id="modificarTipoQuartoButton" onAction="#modificarTipoQuartoSelecionado" text="Modificar Tipo de Quarto" />
                        <Button fx:id="excluirTipoQuartoButton" onAction="#excluirTipoQuartoSelecionado" text="Excluir Tipo de Quarto" />
                    </children>
                </HBox>
                <ListView fx:id="tiposQuartoListView" prefWidth="800.0" prefHeight="200.0" />
            </children>
        </VBox>
    </children>
</AnchorPane>
