<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="rootPane" prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.LoginController">
   <children>
      <Label layoutX="66.0" layoutY="40.0" text="Email:" />
      <TextField fx:id="emailField" layoutX="66.0" layoutY="66.0" prefWidth="200.0" />
      <Label layoutX="66.0" layoutY="101.0" text="Senha:" />
      <PasswordField fx:id="senhaField" layoutX="66.0" layoutY="120.0" prefWidth="200.0" />
      <Button fx:id="loginButton" layoutX="56.0" layoutY="162.0" mnemonicParsing="false" onAction="#handleLogin" text="Login" />
      <Button fx:id="cadastroButton" layoutX="160.0" layoutY="162.0" mnemonicParsing="false" onAction="#handleCadastro" text="Cadastro" />
      <Button fx:id="recuperarSenhaButton" layoutX="266.0" layoutY="162.0" mnemonicParsing="false" onAction="#handleRecuperarSenha" text="Esqueci minha senha" />
      <Label fx:id="errorMessage" layoutX="66.0" layoutY="30.0" textFill="RED" />
   </children>
</AnchorPane>