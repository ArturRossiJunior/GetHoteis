<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="rootPane" prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.RecuperarSenhaController">
   <children>
      <Label layoutX="50.0" layoutY="40.0" text="Recuperar Senha" />
      <Label layoutX="50.0" layoutY="80.0" text="Email:" />
      <TextField fx:id="emailField" layoutX="50.0" layoutY="100.0" prefWidth="300.0" />
      <Label layoutX="50.0" layoutY="140.0" text="Senha Antiga:" />
      <PasswordField fx:id="senhaAntigaField" layoutX="50.0" layoutY="160.0" prefWidth="300.0" />
      <Label layoutX="50.0" layoutY="200.0" text="Nova Senha:" />
      <PasswordField fx:id="senhaNovaField" layoutX="50.0" layoutY="220.0" prefWidth="300.0" />
      <Label layoutX="50.0" layoutY="260.0" text="Confirmar Nova Senha:" />
      <PasswordField fx:id="confirmarSenhaNovaField" layoutX="50.0" layoutY="280.0" prefWidth="300.0" />
      <Button fx:id="recuperarSenhaButton" layoutX="50.0" layoutY="320.0" mnemonicParsing="false" onAction="#handleRecuperarSenha" text="Recuperar Senha" />
      <Label fx:id="errorMessage" layoutX="50.0" layoutY="360.0" textFill="RED" />
      <Button fx:id="voltarButton" layoutX="206.0" layoutY="376.0" mnemonicParsing="false" onAction="#handleVoltar" text="Voltar" />
   </children>
</AnchorPane>